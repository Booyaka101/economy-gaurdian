{
  "name": "economy-guardian-companion",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18 <23"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "check:legacy": "node scripts/check-legacy.js",
    "lint": "eslint --config ..\\.eslintrc.json \"public/**/*.js\"",
    "lint:fix": "eslint --config ..\\.eslintrc.json \"public/**/*.js\" --fix",
    "lint:src": "eslint --config ..\\.eslintrc.json \"src/**/*.js\"",
    "lint:src:fix": "eslint --config ..\\.eslintrc.json \"src/**/*.js\" --fix",
    "lint:all": "npm run lint && npm run lint:src",
    "lint:all:fix": "npm run lint:fix && npm run lint:src:fix",
    "format": "prettier --config ..\\.prettierrc.json --ignore-unknown --write \"public/**/*.{js,css,html,json,md}\" ..\\README.md ..\\CONTRIBUTING.md",
    "format:check": "prettier --config ..\\.prettierrc.json --ignore-unknown --check \"public/**/*.{js,css,html,json,md}\" ..\\README.md ..\\CONTRIBUTING.md",
    "test": "vitest run",
    "test:unit": "vitest run --coverage.enabled=false",
    "test:sqlite": "vitest run src/__tests__/*.sqlite.test.js src/__tests__/sqlite.reset.test.js --coverage.enabled=false",
    "test:watch": "vitest",
    "migrate:sqlite": "node scripts/migrate-to-sqlite.js"
  },
  "dependencies": {
    "@slack/webhook": "^7.0.3",
    "axios": "^1.7.2",
    "better-sqlite3": "^12.2.0",
    "compression": "^1.8.1",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "googleapis": "^156.0.0",
    "helmet": "^8.1.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.3.2",
    "vitest": "^3.2.4"
  },
  "vitest": {
    "test": {
      "environment": "jsdom",
      "setupFiles": [
        "./vitest.setup.js"
      ]
    }
  }
}
